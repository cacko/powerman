{% apply spaceless %}
    {% if state.trigger == 0 %}
        <button class="btn btn-ghost btn-primary">
            <i class="material-icons-outlined">bedtime</i>
            <span>Suspend</span>
        </button>
    {% else %}
        <button class="btn  btn-ghost btn-error">
            <i class="material-icons-outlined">wb_sunny</i>
            <span>WakeUp</span>
        </button>
    {% endif %}
{% endapply %}