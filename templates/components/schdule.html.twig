<template id="dt-selector">
    <div class="destroy"></div>
    <div class="outside">
        <form data-template="/state/<%= action %>/<%= id %>" data-template_dst="action" method="post">
            <div class="inside">
                <h1 data-template="<%= action %>"></h1>
                <div class="form-group center">
                    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                        <label  for="when_now">
                            <input name="state[when]"  class="btn-check" type="radio" id="when_now" value="now" checked>
                            <span>At Once</span>
                        </label>
                        <label for="when_later">
                            <input name="state[when]" class="btn-check" type="radio" id="when_later" value="later">

                            <span>Scheduled</span>
                        </label>
                    </div>
                </div>
                <div class="form-group" data-dependant="state[when]_later" aria-readonly="true">
                    <label for="dt">Date</label>
                    <input id="dt" min="{{ "now"|date("Y-m-d") }}" name="state[dt]" type="date" required>
                </div>
                <div class="form-group" data-dependant="state[when]_later" aria-readonly="true">
                    <label for="tm">Time</label>
                    <input id="tm" min="" name="state[tm]" type="time">
                </div>
                <div class="form-group submit center">
                    <button class="btn btn-primary" type="submit" data-template="<%= action %>"></button>
                </div>
            </div>
        </form>
    </div>
    <div class="destroy"></div>
</template>