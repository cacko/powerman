{% extends 'login/layout.html.twig' %}

{% block page_contents %}
    <style type="text/css">
        .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            row-gap: 1em;
            height: 100%;
        }

        .content button {
            border: none;
        }

        .content button:hover {
            box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
        }

        .content .reminder {
            position: absolute;
            z-index: 10;
            font-weight: bold;
            top: -1em;
            font-variant: proportional-width;
            font-size: 1.5em;
            opacity: 0;
            animation-fill-mode: both;
        }

        button  {
            border-radius: 2em;
            width: 60vh;
            height: 60vh;
        }
    </style>
    <div class="content">
        <button class="btn  btn-ghost anim-shadow">
            <div style="background-image: url({{ asset('/images/logo.webp') }}">
                <a href="{{ path('connect_google') }}">
                </a>
            </div>

        </button>
    </div>

{% endblock %}